@using hastanerandevu.Models.Entities
@model  List<klinikler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<style>
    .doz {
        display: flex;
    }

    .asd {
        margin-top: 30px;
        text-align: center;
    }

    .buton {
        margin-top: 20px;
        margin-left: 50px;
    }
</style>
<body>

    <a  href="/KlinikAdmin/Ekleme"class="btn btn-success buton" >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 18 18">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"></path>
        </svg>Yeni Klinik Ekle
    </a>
   

    <div class="doz">
        <table class="table table-hover asd">
            <tr>
                <th>Klinik ID</th>
                <th>Hastane Adı</th>
                <th>Klinik Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
            <tbody>
                @foreach (var klnkl in Model)
                {
                    <tr>
                        <th>@klnkl.KLINIKID</th>
                        <td>@klnkl.hastaneler.HASTANEAD</td>
                        <td>@klnkl.KLINIKAD</td>
                        <td>@Html.ActionLink("Sil", "Sil", new { id = @klnkl.KLINIKID }, new { @class = "btn btn-danger w-50", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz?')" }) </td>
                        <td><a href="/KlinikAdmin/Güncelle/@klnkl.KLINIKID" class="btn btn-primary">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>




